<div class="container">
  <div class="content">
    <h1><%= @category.name %></h1>

    <h2>問題登録</h2>
    <p>CSVファイルをアップロードしてください</p>
    <%= form_with url: import_category_questions_path(@category), local: true, multipart: true do %>
      <div class="form-group mb-3">
        <%= file_field_tag :file %>
      </div>
      <div class="form-group mb-3">
        <%= submit_tag "アップロード", class: "btn btn-primary mb-3" %>
      </div>
    <% end %>
  </div>

  <div class="content">
    <h2>問題一覧</h2>
    <% @questions&.each do |question| %>
      <div>
        <%= question.number %>: <%= question.content %>
        <ul>
          <% question.choices.each do |choice| %>
            <li><%= choice.content %> (<%= choice.is_correct ? '◯' : '✕' %>)</li>
          <% end %>
        </ul>
        解説: <%= question.explanation %>
      </div>
    <% end %>
  </div>
</div>
