<div class="container">
  <div class="content">
    <%= link_to "←戻る", root_path, class: "btn btn-outline-warning mb-5" %>

    <h1>問題一覧</h1>
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th></th><th></th>
          <th>問題集</th>
          <th>問題数</th>
          <th>作成日</th>
          <th>最終更新日</th>
          <th></th>
        </th>
      </thead>
      <tbody>
        <% @question_categories.each do |question_category| %>
          <tr>
            <td><%= button_to '1番から解く', question_category_start_quiz_path(question_category, random: false), method: :post, class: "btn btn-success" %></td>
            <td><%= button_to 'ランダムで解く', question_category_start_quiz_path(question_category, random: true), method: :post, class: "btn btn-success" %></td>
            <td><%= link_to question_category.name, question_category_path(question_category), class: "btn btn-link btn-lg" %></td>
            <td><%= question_category.questions.count %></td>
            <td><%= question_category.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= question_category.questions.maximum(:updated_at).strftime("%Y/%m/%d") %></td>
            <% if current_user.owner? %>
              <td><%= link_to '削除', question_category_path(question_category), data: { turbo_method: :delete, turbo_confirm: "問題集全体と今までの成績も削除されます。よろしいですか？"}, class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if current_user.admin_or_owner? %>
      <div class="d-grid gap-2 col-4 mx-auto">
        <%= link_to '新規作成', new_question_category_path, class: "btn btn-outline-info" %>
      </div>
    <% end %>
  </div>
</div>
