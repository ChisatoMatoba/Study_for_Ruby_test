<div class="container">
  <div class="content">
    <h1>問題作成</h1>

    <%= form_with(model: @question_category, local: true) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name, '問題名', class: "form-label" %>
        <%= form.text_field :name, class: 'form-control', placeholder: '例：基礎力確認問題' %>
      </div>
      <div class="form-group">
        <%= form.submit "作成", class: "btn btn-primary mb-3" %>
      </div>
    <% end %>

    </div>
  </div>
</div>
